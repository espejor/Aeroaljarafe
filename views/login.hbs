<form id="login" method="post" enctype="multipart/form-data" name="login">
    <input type="email" name="email" placeholder="Tu email" required="true"> 
    <br><br>
    <input type="password" name="password" placeholder="Tu contraseÃ±a" required="true">
    <br><br>
    <input type="submit" value="Login">
</form>

<script type="text/javascript">
    const formLog = document.querySelector('#login')
    //Creamos un objeto con los datos del formulario

    // AL formLog le agregamos un evento 
    formLog.addEventListener('submit',function(event){
        event.preventDefault()
        const data = new FormData(this)
        var dataObj = {}

        data.forEach(function (value, key) {
            dataObj[key] = value;
        });
        fetch('/api/signin',{
            method:'POST',
            body: JSON.stringify( dataObj ),
            headers: {'Content-Type':'application/json;charset=UTF-8'}
        })
        .then(res => 
            res.json()
        )
        .then(data => 
            localStorage.setItem('token', data.token)
        )
    })
</script>