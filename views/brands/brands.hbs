
    <ul id="listado" class="list-group">
        <li class="list-group-item list-group-item-info">
            <h3 class="list-group-item-header">Marcas de Aeronaves</h3>
        </li>
        {{# each brands}}
            <li class="list-group-item" >
                <div class="row">
                    <div class="col-md-10">
                        <div >
                           <a href="brand/{{_id}}"> <img src="/images/{{_id}}.{{extension}}" alt="imagen" width="200" class="img-fluid" ></a> 
                        </div>
                    </div>
                    <div class="col-md-2">
                        <form method="POST" action="brand/{{_id}}?_method=PUT" class= "link right-space">
                            <input type= "submit" value="Editar" class= "btn btn-info">
                        </form>
                        <form method="POST" action="brand/{{_id}}?_method=DELETE" class= "link right-space">
                            <input type= "submit" value="Borrar" class= "btn btn-danger">                            
                        </form>
                    </div>
                </div> 
            </li>
        {{/each}}
        <li class="list-group-item list-group-item-info">
            <div class="row">
                <div class="col-md-10">

                </div>
                <div class="col-md-2">
                    <form method="GET" action="brand/new" class= "link right-space">
                        <input type= "submit" value="Nuevo" class= "btn btn-primary">
                    </form>            
                </div>                
            </div>

        </li>
    </ul>
