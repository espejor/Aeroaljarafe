<div class="container">
    <ul id="listado" class="list-group">
        <li class="list-group-item list-group-item-info">
            <h3 class="list-group-item-header">Marcas de Aeronaves</h3>
        </li>
            {{# each brands}}
                <li class="list-group-item" >
                    <div class="row">
                        <div class="col-md-10">
                            {{_id}} {{brand}}
                        </div>
                        <div class="col-md-2">
                            <form action="brand/{{_id}}?_method=PUT" class= "link right-space" method="POST">
                                <input type= "submit" value="Editar">
                            </form>
                            <form action="brand/{{_id}}?_method=DELETE" class= "link">
                                <input type= "submit" value="Borrar">                            
                            </form>
                        </div>
                    </div> 
              
                </li>
            {{/each}}
    </ul>
</div>